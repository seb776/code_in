<UserControl x:Class="code_in.Views.MainView.Nodes.Items.NodeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:code_in.Views.MainView.Nodes.Items"
             mc:Ignorable="d" 
             d:DesignHeight="31" d:DesignWidth="300" Padding="0,3,0,3">
    <StackPanel x:Name="Container" Orientation="Horizontal">
        <my:NodeAnchor x:Name="Anchor" Width="10" Height="20" VerticalAlignment="Center"/>
        <!--<Rectangle Width="2" Fill="Black" Stretch="Fill"/>-->
        <TextBox x:Name="ItemName" Margin="2,2,0,0"  BorderThickness="0" VerticalAlignment="Center" Background="Transparent" Foreground="White">
            NodeItem
        </TextBox>
        <my:TypeInfo x:Name="TypeField"/>
    </StackPanel>
</UserControl>
