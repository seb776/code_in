<UserControl x:Class="code_in.Views.MainView.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:nodes="clr-namespace:code_in.Views.MainView.Nodes"
             d:DesignHeight="300" d:DesignWidth="300">
    <Expander Header="SearchBar" HorizontalAlignment="Right" VerticalAlignment="Stretch" FlowDirection="LeftToRight" Foreground="Black" HorizontalContentAlignment="Left" ExpandDirection="Right" IsExpanded="False" >
    <Grid Background="#42FFFFFF" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Type in to search" Width="120"/>
            <Button HorizontalAlignment="Right" Content="Search" Background="Aqua" Width="auto"/>
        </StackPanel>
        <StackPanel x:Name="SearchResult" HorizontalAlignment="Center" Grid.Row="1">
            <nodes:BaseNode />
        </StackPanel>
        
            <Grid Background="#FFE5E5E5"/>
    </Grid>
    </Expander>
</UserControl>
