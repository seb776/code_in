<UserControl x:Class="code_in.Views.NodalView.NodesElems.Items.Assets.ScopeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid MouseRightButtonDown="Grid_MouseRightButtonDown">
        <Rectangle x:Name="Shape" Fill="White"/>
        <Label x:Name="Symbol" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="20" FontSize="15">
            <Label.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2"/>
            </Label.Effect>
            example
        </Label>
    </Grid>
</UserControl>
