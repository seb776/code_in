        <Label HorizontalAlignment="Center" Foreground="#ebebeb" FontSize="20">Erreurs</Label>

        <Button Content="Valider" Height="30" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0, 0, 0, 100" Click="Button_Confirm"/>
