<UserControl x:Class="code_in.Views.ConfigView.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    
    <!-- /!\ attention code dégueulasse : Définition du style par défaut des boutons -->
    <UserControl.Resources>
        <!-- This style is used for buttons, to remove the WPF default 'animated' mouse over effect -->
        <Style x:Key="DefaultB" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="0.3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="1"
                            Padding="4,2" 
                            BorderBrush="#ebebeb" 
                            CornerRadius="3" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                            </Trigger>
<!--                            <Trigger Property="IsPressed">
                                
                            </Trigger> -->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- /!\ attention code dégueulasse : Définition de la grid principale découpée en sous-parties-->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#ebebeb">
        <!-- déclaration de 2 colonnes et 10 rows pour le moment, la dernière row est d'une hauteur indéfinie et la derniere colonne d'une longueur indéfinie pour pouvoir remplir le background-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" Width="200" Name="Categories"/>
            <ColumnDefinition Width="*" Name="Menu" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- /!\ attention code dégueulasse : déclaration et settings des différentes "sous-parties" de la grid, on peux se repérer grâce aux champs row et columns-->
        <TextBlock Grid.Row="0" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Text=" Configuration :"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="#ebebeb" Background="#424242" FontSize="18"></TextBlock>
        <Button Style="{StaticResource DefaultB}" Grid.Row="2" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Content="Général" ClickMode="Press" Click="Button_Click" HorizontalContentAlignment="Left"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200"></TextBlock>
        <Button Style="{StaticResource DefaultB}" Grid.Row="4" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Content="Thèmes" HorizontalContentAlignment="Left"/>
        <Button Style="{StaticResource DefaultB}" Grid.Row="5" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Content="- Changer thème" HorizontalContentAlignment="Right"/>
        <Button Style="{StaticResource DefaultB}" Grid.Row="6" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200" Content="- Créer thème" HorizontalContentAlignment="Right"/>
        <TextBlock Grid.Row="7" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200"/>
        <TextBlock Grid.Row="8" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200"/>
        <TextBlock Grid.Row="9" Grid.Column="0" Foreground="#ebebeb" Background="#424242" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="200"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Foreground="#ebebeb" Background="#424242" FontSize="18" TextAlignment="Left"> default</TextBlock>
    </Grid>
</UserControl>
