<UserControl x:Class="code_in.Views.ConfigView.SubViews.ShortcutsLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    <Grid>
        <StackPanel x:Name="General_layout" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
            <GroupBox Width="auto" HorizontalAlignment="Left" Padding="10">
                <GroupBox.Header>
                    <Label Foreground="#ebebeb"  x:Name="SauvegardeField" FontSize="20">TMP: Sauvegarde</Label>
                </GroupBox.Header>
                <TextBox x:Name="keySaveField" MaxLength="1" Text="S" TextChanged="keySaveField_TextChanged"/>
            </GroupBox>
            <GroupBox Width="auto" HorizontalAlignment="Left" Padding="10">
                <GroupBox.Header>
                    <Label Foreground="#ebebeb"  x:Name="CloseField" FontSize="20">TMP: Fermeture</Label>
                </GroupBox.Header>
                <TextBox x:Name="keyCloseField" MaxLength="1" Text="A" TextChanged="keyCloseField_TextChanged"/>
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
